{% extends 'base.html.twig' %}

{% block title %}Rate Offer - Dream Holiday{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/rate_offer.css') }}">
{% endblock %}

{% block page_content %}
    <div class="container-fluid my-5">
        <div class="row justify-content-center">
            <div class="col-10 col-md-4" id="rate-form-container">
                <h1>Rate offer</h1>
                <h2><i class="fas fa-map-marker-alt"></i> {{ offer.destination }}</h2>
                <p><i class="fas fa-calendar-check"></i> {{ offer.departureDate|date("d.m.Y") }}-{{ offer.comebackDate|date("d.m.Y") }}</p>
                {{ form_start(rate_offer_form) }}
                <div class="form-group" id="stars-container">
                    {{ form_label(rate_offer_form.rating) }}
                    {{ form_widget(rate_offer_form.rating) }}
                    <i class="fas fa-star" data-starnum="1" id="star1"></i>
                    <i class="fas fa-star" data-starnum="2" id="star2"></i>
                    <i class="fas fa-star" data-starnum="3" id="star3"></i>
                    <i class="far fa-star" data-starnum="4" id="star4"></i>
                    <i class="far fa-star" data-starnum="5" id="star5"></i>
                </div>
                <div class="form-group">
                    {{ form_label(rate_offer_form.comment) }}
                    {{ form_widget(rate_offer_form.comment) }}
                </div>
                <div id="submit-btn-container" class="text-center">
                    {{ form_widget(rate_offer_form.submit) }}
                </div>
                {{ form_end(rate_offer_form) }}
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <script src="{{ asset('javascript/starsRating.js') }}" type="text/javascript"></script>
    <script>
        $(function() {
           registerRatingEvents();
        });
    </script>
{% endblock %}